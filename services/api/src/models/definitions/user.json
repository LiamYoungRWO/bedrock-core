{
  "attributes": {
    "email": {
      "type": "String",
      "validate": "email",
      "lowercase": true,
      "trim": true
    },
    "phoneNumber": {
      "type": "String",
      "validate": "phone",
      "trim": true
    },
    "roles": [
      {
        "role": {
          "type": "String",
          "required": true
        },
        "scope": {
          "type": "String",
          "required": true
        },
        "scopeRef": {
          "type": "ObjectId",
          "ref": "Organization"
        }
      }
    ],
    "firstName": {
      "type": "String",
      "required": true,
      "trim": true
    },
    "lastName": {
      "type": "String",
      "required": true,
      "trim": true
    },
    "theme": {
      "type": "String",
      "enum": [
        "dark",
        "light",
        "system"
      ]
    },
    "isDeveloper": {
      "type": "Boolean",
      "default": false
    },
    "$private": {
      "type": "Scope",
      "readAccess": "none",
      "writeAccess": "none",
      "attributes": {
        "accessConfirmedAt": {
          "type": "Date"
        },
        "hashedPassword": {
          "type": "String"
        },
        "loginAttempts": {
          "type": "Number",
          "default": 0
        },
        "lastLoginAttemptAt": {
          "type": "Date"
        },
        "tempTokenId": {
          "type": "String"
        },
        "smsSecret": {
          "type": "String"
        },
        "mfaBackupCodes": [
          {
            "type": "String"
          }
        ],
        "mfaSecret": {
          "type": "String"
        },
        "mfaPhoneNumber": {
          "type": "String"
        }
      }
    },
    "authInfo": {
      "type": "Array",
      "readAccess": "self",
      "writeAccess": "none",
      "attributes": {
        "lastUsedAt": {
          "type": "Date",
          "required": true
        },
        "userAgent": {
          "type": "String",
          "required": false
        },
        "ip": {
          "type": "String",
          "required": true
        },
        "country": {
          "type": "String"
        },
        "iat": {
          "type": "Date",
          "required": true
        },
        "jti": {
          "type": "String",
          "required": true
        },
        "exp": {
          "type": "Date",
          "required": true
        }
      }
    },
    "mfaMethod": {
      "type": "String",
      "enum": [
        "sms",
        "otp"
      ]
    }
  },
  "delete": {
    "errorOnReferenced": {
      "except": [
        "AuditEntry"
      ]
    }
  },
  "search": {
    "fields": [
      "firstName",
      "lastName",
      "email",
      "phoneNumber"
    ]
  }
}
